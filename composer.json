{
  "name": "sglitowitzsoci/soci-psalm-no-string-concatenation",
  "description": "SOCi Psalm Rule, no string concatenation",
  "version": "1.0.0",
  "type": "psalm-plugin",
  "authors": [
    {
      "name": "Sam Litowitz",
      "email": "sglitowitzsoci@users.noreply.github.com"
    }
  ],
  "require": {
    "vimeo/psalm": "dev-master"
  },
  "require-dev": {
    "phpunit/phpunit": "^7.2",
    "squizlabs/php_codesniffer": "^3.3"
  },
  "extra": {
    "psalm": {
      "pluginClass": "NoStringConcatenation"
    }
  },
  "autoload": {
    "psr-4": {
      "SOCi\\Psalm\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "SOCi\\Psalm\\Plugin\\Tests\\": "tests"
    }
  },
  "scripts": {
    "check": [
      "@cs-check",
      "@test",
      "@analyze"
    ],
    "analyze": "psalm",
    "cs-check": "phpcs",
    "cs-fix": "phpcbf",
    "test": "phpunit --colors=always",
    "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
  }
}
